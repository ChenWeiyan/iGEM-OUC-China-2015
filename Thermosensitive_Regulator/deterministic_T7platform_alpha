function z=deterministic_T7platform_alpha(t,z)

global alpha;

% parameters

v1=1/120;
v2=1/60;
n=2.26;
%alpha=0.1;
k_half=0.0002;
km=0.5;
k=0.0083;
beta1=log(2)/600;
beta2=0.00026;
beta3=log(2)/180;
beta4=log(2)/2400;
ara=0.002;
DNA=10;

% Equations

z=[v1*ara^n/(k_half.^n+ara.^n)-beta1.*z(1)-beta2;
    v2*DNA*z(1)*alpha/(km+z(1)*alpha)-beta3.*z(2)-beta2;
    k*z(2)-beta4.*z(3)-beta2];
